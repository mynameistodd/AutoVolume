<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="labels" parent="android:Widget.TextView">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">#848484</item>
    </style>

    <style name="timeLabel" parent="labels">

    </style>

    <style name="volumeLabel" parent="labels">

        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="recurLabel" parent="labels">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="tv_recur" parent="android:Widget.TextView">
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="tv_title" parent="android:Widget.TextView">
        <!--<item name="android:layout_marginTop">15dp</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="tv_time" parent="android:Widget.TextView">
        <!--<item name="android:layout_marginLeft">26dp</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="tv_volume" parent="android:Widget.TextView">
        <!--<item name="android:layout_marginRight">31dp</item>-->
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
</resources>
